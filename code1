public class hash {
    public static void main(String[] args) {

        System.out.println("enter number");
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();

        // checking num is positive , negative or zero

        if(n ==0 )
        {
            System.out.println("you enter a zero :" + n);
        }

        else if(n>0)
        {
            System.out.println("you enter a positive number :" + n);
        }

        else{
            System.out.println("you enter a negative number :" + n);
        }
    }
}
